<%- include('../partials/header') %>

<h1>All Piroshkis</h1>

<a href="/piroshkis/new">New</a>
    <h1>Piroshkis</h1>
    <% for (key in piroshkis) {%>
        <hr>
        <h3><%= piroshkis[key].name %></h3>
        <h4><%= piroshkis[key].protein %></h4>
        <p><%= piroshkis[key].garnish %></p>
        <a href='/piroshkis/<%= key %>'><button>Show</button></a>
        <br>
        <br>
        <a href='/piroshkis/<%= key %>/edit'><button>Edit</button></a>
        <br>
        <br>
        <form method="POST" action="/piroshkis/<%= key %>?_method=DELETE">
        <button class="delete" type="submit">Delete</button>
        </form>
        <hr>
        <br>
    <% } %>

<%- include('../partials/footer') %>